<EditForm Model="@Product" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="form-group">
        <label for="name">Name</label>
        <InputText id="name" class="form-control" @bind-Value="Product.Name"/>
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <InputTextArea id="description" class="form-control" @bind-Value="Product.Description"/>
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <InputNumber id="price" class="form-control" @bind-Value="Product.Price"/>
    </div>

    <button type="button" class="btn btn-primary" @onclick="InvokeLoadImageAsync">Load image</button>

    <div class="form-group w-25 h-25">
        @if (Url != null)
        {
            <div class="form-group w-25 h-25">
                <img class="img-fluid rounded"
                     src="@Url"
                     alt="@Product.Name"
                     @onload="OnImageLoaded"/>
            </div>
        }
        else if (Product is { ImageData.Length: > 0 })
        {
            <img class="img-fluid rounded"
                 src="@($"data:image/png;base64,{Convert.ToBase64String(Product.ImageData)}")"
                 alt="@Product.Name"/>
        }
    </div>

    <ProductModal @bind-IsOpen="IsModalOpen" Message="Image loaded successfully!"/>

    <h1>IsModalOpen = @IsModalOpen</h1>

    <button type="submit" class="btn btn-primary">Save</button>
</EditForm>