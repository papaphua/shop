@page "/products"

@if (_list.Items.Count < 1)
{
    <p class="text-center text-muted">Loading...</p>
}
else
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in _list.Items)
            {
                <div class="col d-flex align-items-stretch">
                    <div class="card shadow-sm flex-grow-1" style="background-color: rgb(98, 78, 136)">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex flex-column justify-content-start">
                                <h4 class="card-title" style="color: beige; font-weight: bold">@product.Name</h4>
                                <p style="color: beige;">@product.Description</p>
                                <p style="color: beige;">Price: @product.Price</p>
                            </div>
                            @if (product.ImageData.Length > 0)
                            {
                                <div class="d-flex justify-content-center mt-3">
                                    <img class="img-fluid rounded"
                                         src="@($"data:image/png;base64,{Convert.ToBase64String(product.ImageData)}")"
                                         alt="@product.Name" style="max-height: 200px; object-fit: cover;">
                                </div>
                            }
                            <div class="mt-3 d-flex justify-content-start">
                                <button class="button button-danger" @onclick="() => DeleteProduct(product.Id)">Delete</button>
                                <button class="button button-normal" @onclick='() => Nav.NavigateTo($"/edit-product/{product.Id}")'>Edit</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>

        <div class="d-flex justify-content-center mt-4">
            @if (_list.Metadata.HasPreviousPage)
            {
                <button class="button" @onclick="() => LoadNewPage(_list.Metadata.PageNumber - 1)">Previous
                </button>
            }
            <span class="align-self-center">Page @_list.Metadata.PageNumber of @_list.Metadata.TotalPages</span>
            @if (_list.Metadata.HasNextPage)
            {
                <button class="button" @onclick="() => LoadNewPage(_list.Metadata.PageNumber + 1)">Next
                </button>
            }
        </div>
}