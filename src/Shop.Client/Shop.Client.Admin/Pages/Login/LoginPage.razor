@page "/login"

<div class="form">
    <div class="bg">
        <EditForm Model="@LoginDto" OnValidSubmit="HandleLoginAsync">
            <DataAnnotationsValidator/>
            <div class="form-comp">
                <div class="title">
                    Login
                </div>
                <div class="body">
                    <table>
                        <tr>
                            <td><label for="email">Email</label></td>
                            <td>
                                <InputText id="email" @bind-Value="LoginDto.Email"/>
                                <ValidationMessage class="validation-message" For="() => LoginDto.Email"/>
                            </td>
                        </tr>
                        <tr>
                            <td><label for="password">Password</label></td>
                            <td>
                                <InputText id="password" type="password" @bind-Value="LoginDto.Password"/>
                                <ValidationMessage class="validation-message" For="() => LoginDto.Password"/>
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="btn-holder">
                    <button class="btn" type="submit">Login</button>
                </div>
            </div>
        </EditForm>
    </div>
</div>