<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Admin Panel</a>
    </div>
</div>
<div class="nav-link-list">
    <div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick='() => NavigateToPage("")'>
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="products">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"
                      @onclick='() => NavigateToPage("/products")'></span> Products
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="create-product">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"
                      @onclick='() => NavigateToPage("/create-product")'></span> Create new
            </NavLink>
        </div>
    </div>
    <div class="align-self-center">
        <h4>@_currentUri</h4>
        <AuthorizeView>
            <Authorized>
                <NavLink href="logout">
                    <button class="button button-normal">Logout</button>
                </NavLink>
            </Authorized>
            <NotAuthorized>
                @if (!IsOnLoginPage())
                {
                    <button class="button button-normal" @onclick='() => NavigateToPage("/login")'>Login</button>
                }
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>